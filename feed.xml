---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
{% if page.xsl %}
  <?xml-stylesheet type="text/xml" href="{{ '/feed.xslt.xml' | absolute_url }}"?>
{% endif %}
<feed xmlns="http://www.w3.org/2005/Atom" {% if site.lang %}xml:lang="{{ site.lang }}"{% endif %}>
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
  <link href="{{ page.url | absolute_url }}" rel="self" type="application/atom+xml" />
  <link href="{{ '/' | absolute_url }}" rel="alternate" type="text/html" {% if site.lang %}hreflang="{{ site.lang }}" {% endif %}/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ '/' | absolute_url | xml_escape }}</id>

  {% if site.title %}
    <title type="html">{{ site.title | smartify | xml_escape }}</title>
  {% elsif site.name %}
    <title type="html">{{ site.name | smartify | xml_escape }}</title>
  {% endif %}

  {% if site.description %}
    <subtitle>{{ site.description | xml_escape }}</subtitle>
  {% endif %}

  {% if site.author %}
    <author>
        <name>{{ site.author.name | default: site.author | xml_escape }}</name>
      {% if site.author.email %}
        <email>{{ site.author.email | xml_escape }}</email>
      {% endif %}
      {% if site.author.uri %}
        <uri>{{ site.author.uri | xml_escape }}</uri>
      {% endif %}
    </author>
  {% endif %}

  {% assign projects = site.projects | where_exp: "project", "project.draft != true" %}
  {% for project in projects limit: 10 %}
    <entry{% if project.lang %}{{" "}}xml:lang="{{ project.lang }}"{% endif %}>
      <title type="html">{{ project.title | smartify | strip_html | normalize_whitespace | xml_escape }}</title>
      <link href="{{ project.url | absolute_url }}" rel="alternate" type="text/html" title="{{ project.title | xml_escape }}" />
      <published>{{ project.date | date_to_xmlschema }}</published>
      <updated>{{ project.last_modified_at | default: project.date | date_to_xmlschema }}</updated>
      <id>{{ project.id | absolute_url | xml_escape }}</id>
      <content type="html" xml:base="{{ project.url | absolute_url | xml_escape }}">{{ project.content | strip | xml_escape }}</content>

      {% assign project_author = project.author | default: project.authors[0] | default: site.author %}
      {% assign project_author = site.data.authors[project_author] | default: project_author %}
      {% assign project_author_email = project_author.email | default: nil %}
      {% assign project_author_uri = project_author.uri | default: nil %}
      {% assign project_author_name = project_author.name | default: project_author %}

      <author>
          <name>{{ project_author_name | default: "" | xml_escape }}</name>
        {% if project_author_email %}
          <email>{{ project_author_email | xml_escape }}</email>
        {% endif %}
        {% if project_author_uri %}
          <uri>{{ project_author_uri | xml_escape }}</uri>
        {% endif %}
      </author>

      {% if project.category %}
        <category term="{{ project.category | xml_escape }}" />
      {% endif %}

      {% for tag in project.tags %}
        <category term="{{ tag | xml_escape }}" />
      {% endfor %}

      {% if project.excerpt and project.excerpt != empty %}
        <summary type="html">{{ project.excerpt | strip_html | normalize_whitespace | xml_escape }}</summary>
      {% endif %}

      {% assign project_image = project.image.path | default: project.image %}
      {% if project_image %}
        {% unless project_image contains "://" %}
          {% assign project_image = project_image | absolute_url | xml_escape  %}
        {% endunless %}
        <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ project_image }}" />
      {% endif %}
    </entry>
  {% endfor %}
</feed>
